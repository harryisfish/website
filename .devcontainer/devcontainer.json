{
    "name": "website",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/root/website",
    "shutdownAction": "stopContainer",
    "remoteUser": "root",
    "runArgs": ["--network=host"],
    "forwardPorts": [3000],
    "postCreateCommand": "git clone git@github.com:harryisfish/website.git . && cp .env.local.example .env.local",
    "postStartCommand": "pnpm install",
    "customizations": {
      "vscode": {
        "extensions": [
          "steoates.autoimport",
          "naumovs.color-highlight",
          "dbaeumer.vscode-eslint",
          "redjue.git-commit-plugin",
          "antfu.iconify",
          "xabikos.javascriptsnippets",
          "esbenp.prettier-vscode",
          "gruntfuggly.todo-tree",
          "stylelint.vscode-stylelint",
          "standard.vscode-standard",
          "bradlc.vscode-tailwindcss",
          "suhelmakkad.shadcn-ui",
          "veroxyle.shadcn-ui-snippets",
          "aaron-bond.better-comments",
          "mikestead.dotenv",
          "heybourn.headwind",
          "lokalise.i18n-ally",
          "kisstkondoros.vscode-gutter-preview",
          "prisma.prisma",
          "eamodio.gitlens"
        ]
      }
    },
    "mounts": [
      "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ]
  }
  